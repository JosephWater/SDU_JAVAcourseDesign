<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.teach.javafxclient.controller.ChatController">
    <children>
        <TextArea fx:id="chatArea" editable="false" prefHeight="400.0" prefWidth="600.0" />
        <TextField fx:id="inputField" prefWidth="600.0" />
        <Button text="Send" onAction="#handleSendAction" />
    </children>
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</VBox>
